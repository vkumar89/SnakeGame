@model IEnumerable<MVCWithLinq1.Models.Student>
@{
    ViewBag.Title = "DisplayStudents";
}


<h2 style="text-align:center;color :red">Students Details </h2>

<table border="1" cellpadding="20" draggable="true" lang="hi" align="center" class="table-condensed">

    <tr class="navbar-brand ">
        <th>@Html.DisplayNameFor(S => S.Sid)</th>
        <th>@Html.DisplayNameFor(S => S.Name)</th>
        <th>@Html.DisplayNameFor(S => S.Class)</th>
        <th>@Html.DisplayNameFor(S => S.Fees)</th>
        <th>@Html.DisplayNameFor(S => S.Photo)</th>
        <th>Actions</th>
    </tr>

    @foreach (var v in Model)
    {
        <tr>

            <td>@Html.DisplayFor(S => v.Sid)</td>
            <td>@Html.DisplayFor(S => v.Name)</td>
            <td>@Html.DisplayFor(S => v.Class)</td>
            <td>@Html.DisplayFor(S => v.Fees)</td>
            <td>@Html.DisplayFor(S => v.Photo)</td>
            <td>
                <img src="~/Uploads/@v.Photo" width="40" height="25" />
            </td>
            <td>
                @Html.ActionLink("view", "DisplayStudent", new { sid = v.Sid })
                @Html.ActionLink("Edit", "EditStudent", new { sid = v.Sid })
                @Html.ActionLink("Delete", "DeleteStudent", new { sid = v.Sid },
               new { onclik = "return Confirm('Are you sure of deleting the record')" })
            </td>

        </tr>
    }
    <tr>
        <td colspan="6" align="center">@Html.ActionLink("Add Student", "AddStudent")</td>
    </tr>


</table>
